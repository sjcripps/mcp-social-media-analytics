{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.sjcripps/social-media",
  "title": "EzBiz Social Media Analytics",
  "description": "AI social media analytics: profiles, engagement, trends, hashtags across platforms",
  "version": "1.0.0",
  "websiteUrl": "https://social.ezbizservices.com",
  "icons": [
    {
      "src": "https://raw.githubusercontent.com/ezbiz-services/mcp-social-media/main/static/icon.svg",
      "mimeType": "image/svg+xml",
      "sizes": ["200x200"]
    }
  ],
  "repository": {
    "url": "https://github.com/ezbiz-services/mcp-social-media",
    "source": "github"
  },
  "remotes": [
    {
      "type": "streamable-http",
      "url": "https://social.ezbizservices.com/mcp",
      "headers": [
        {
          "name": "x-api-key",
          "description": "Your EzBiz API key. Get a free key at https://social.ezbizservices.com/signup",
          "isRequired": true,
          "isSecret": true
        }
      ]
    }
  ]
}
